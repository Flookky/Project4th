<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TeacherEachPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/gradient_background"
            android:elevation="2dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PostTitle"
            android:textSize="14dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/TextPostTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_assign_layout"
            android:text="Title"
            android:maxLines="3"
            android:padding="10dp"
            android:textColor="@color/grey" >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="Content"
            android:textColor="@color/black"
            android:textSize="14dp">
        </TextView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_assign_layout"
                android:text="Hello"
                android:padding="10dp"
                android:maxLines="5"
                android:textColor="@color/grey" />

        </ScrollView>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picbase"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/picbase2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/picbase3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/picbase4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/picbase5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true">
            </ImageView>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/filechosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file is selected"
        android:textSize="14dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/your_comment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Your Comments"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"

        />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/comment"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_assign_layout"
            android:backgroundTint="@color/grey6"
            android:hint="Comment Here"
            android:maxLines="3"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/grey" />

        <ImageView
            android:id="@+id/picfile"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/filechosenstu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file is selected"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/imageadd"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/file"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/imagefileadd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />

            <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="15dp"
                android:text="Apply"

                />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>

